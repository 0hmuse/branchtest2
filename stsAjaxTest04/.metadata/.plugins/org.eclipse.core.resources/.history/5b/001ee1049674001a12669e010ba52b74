<script type="text/javascript">
$(function(){
	$("#btnAdd").click(function(){
		//alert("ok");
		var member = $("#f").serialize();
		$.ajax("/all/insertMember",{data:member,success:function(r){
			alert(r);
		}});
	});	
	
	
	$("#btnReset").click(function(){
		$("#id").val("");
		$("#pwd").val("");
		$("#name").val("");
		$("#role").val("");
	});
});
</script>
