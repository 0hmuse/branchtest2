<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script type="text/javascript">
$(function(){
	var no = location.search;
	no = no.substring(no.indexOf("=")+1);
	//alert(no);
	var goods = {"no":no}
	
	$.ajax("/getGoods",{data:goods,success:function(r){
		//alert(r);
	
		$("#no").html(r.no);
		$("#item").html(r.item);
		$("#qty").html(r.qty);
		$("#price").html(r.price);
		
		$("#img").attr({"src":"/img/"+r.fname,width:150,height:150});
		$("#detail").html(r.detail);				
	}});	
	
	$("#btnUpdate").click(function(){
		$.ajax("/deleteGoods",{data:goods,success:function(r){
			alert("삭제성공!");
			
		}});
	});	
});
</script>
</head>
<body>
	<h2>상세보기</h2>
	<hr>	
	<table>
		<tr>
			<td>
				<img id="img">
			<td>
			<td>
				<table>
					<tr>
						<td>상품번호:</td>
						<td id="no"></td>
					</tr>
					<tr>
						<td>상품이름:</td>
						<td id="item"></td>
					</tr>
					<tr>
						<td>상품가격:</td>
						<td id="price"></td>
					</tr>
					<tr>
						<td>상품수량:</td>
						<td id="qty"></td>
					</tr>
					<tr>
						<td>상세설명:</td>
						<td id="detail"></td>
					</tr>
				</table>
			</td>
		</table>	
		<button id="btnUpdate">수정</button>
		<button id="btnDelete">삭제</button>	
</body>
</html>